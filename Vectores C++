#include <stdio.h>
using namespace std;
#define TAM 4
int main()
{
    int idades[TAM], i, j, auxiliar;
    for(i=0; i<TAM; i++){
        printf("Digite uma idade:\n");
        scanf("%d", &idades[i]);
    }
    printf("Desordenado\n");
    for(i=0; i<TAM; i++){
        printf(" %d ", idades[i]);
    }
    for(i=0; i<TAM; i++){
        for(j=i+1; j<TAM; j++){
            if(idades[i]>idades[j]){
                auxiliar=idades[i];
                idades[i]=idades[j];
                idades[j]=auxiliar;
            }
            
        }
    }
    printf("\nOrdenado\n");
    for(i=0; i<TAM; i++){
        printf(" %d ", idades[i]);
}
    return 0;
}





#include <stdio.h>
using namespace std;
#define TAM 18
int main()
{
    int pressao[TAM], i, abaixo = 0, arriba =0;
    float media;
    for(i=0; i<TAM; i++){
        printf("Digite quantas libras tem o pneu %d\n", i+1);
        scanf("%d", &pressao[i]);
    }
    for(i=0; i<TAM; i++){
        printf(" %d ", pressao[i]);
        if(pressao[i]<= 100){
            abaixo++;
        }else{
            arriba++;
        }
    }
    printf("\n%d Pressão abaixo e %d Pressão arriba\n", abaixo, arriba);
    printf("media\n");
    
    media = (pressao + pressao[i]) / 18;
    
    return 0;
}
